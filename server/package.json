{
  "name": "prion-server",
  "author": "Nicholas Romero <ncrmro@gmail.com>",
  "license": "MIT",
  "engines": {
    "node": ">=8.3.1",
    "npm": ">=5.6.0"
  },
  "version": "0.0.1",
  "scripts": {
    "start": "concurrently --kill-others \"yarn run dev:webpack\" \"yarn run dev:server\"",
    "dev:webpack": "webpack --watch --config webpack.config.js",
    "dev:server": "nodemon ./build",
    "db": "ts-node node_modules/.bin/knex",
    "db:seed": "yarn run db:migrate && yarn run db seed:run",
    "db:migrate": "yarn run db migrate:latest",
    "db:rollback": "yarn run db migrate:rollback",
    "build": "webpack --config webpack.config.js",
    "prettier": "prettier-tslint fix \"src/**/*.+(ts|tsx)\"",
    "lint": "tslint --project ./ \"src/**/*.+(ts|tsx)\""
  },
  "dependencies": {
    "@types/bookshelf": "^0.9.8",
    "@types/knex": "^0.14.15",
    "@types/node": "^10.5.2",
    "apollo-datasource-rest": "^2.0.0-rc.0",
    "apollo-server": "^2.0.0-rc.0",
    "bcrypt": "^3.0.0",
    "bookshelf": "^0.13.3",
    "dotenv": "^6.0.0",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.9.2",
    "knex": "0.13",
    "pg": "^7.4.3",
    "sqlite3": "^4.0.1",
    "ts-loader": "^4.4.2",
    "webpack": "^4.14.0",
    "webpack-cli": "^3.0.8"
  },
  "devDependencies": {
    "concurrently": "^3.6.0",
    "faker": "^4.1.0",
    "graphql-cli": "2.16.3",
    "nodemon": "^1.17.5",
    "prettier": "^1.13.7",
    "prettier-tslint": "^0.4.0",
    "ts-node": "^7.0.0",
    "tsc-watch": "^1.0.22",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.9.2",
    "typescript": "2.9.2"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "modules": "commonjs",
          "targets": {
            "esmodules": true,
            "node": "current"
          }
        }
      ]
    ]
  }
}
