{
  "name": "prion",
  "author": "Nicholas Romero <ncrmro@gmail.com>",
  "license": "MIT",
  "version": "0.0.1",
  "engines": {
    "node": ">=8.3.1",
    "npm": ">=5.6.0"
  },
  "scripts": {
    "start": "concurrently --kill-others \"yarn run client:dev:start\" \"yarn run server:dev:start\"",
    "build": "yarn run client:prod:build && yarn run server:prod:build",
    "dev:build": "yarn run dev:client:build && yarn run dev:server:build",
    "prod:start": "concurrently --kill-others \"yarn run client:prod:start\" \"yarn run server:prod:start\"",
    "prod:start:background": "nohup bash -c 'yarn run prod:start 2>&1 &'",
    "client:dev:start": "cd ./client && yarn run start",
    "client:prod:build": "cd ./client && yarn run build",
    "client:prod:start": "cd ./client && yarn run prod:start",
    "server:dev:start": "cd ./server && yarn run start",
    "server:prod:start": "cd ./server && yarn run prod:start",
    "server:prod:build": "cd ./server && yarn run build",
    "db:seed": "cd ./server && yarn run db:migrate && yarn run db seed:run",
    "db:migrate": "cd ./server && yarn run db migrate:latest",
    "db:rollback": "cd ./server && yarn run db migrate:rollback",
    "test": "cd ./ops/testing && yarn run start",
    "dc": "docker-compose -f ops/docker/compose.yml",
    "dc:selenium": "yarn run dc -f ./ops/docker/selenium.yml",
    "dc:build": "yarn run dc build",
    "dc:start": "yarn run dc up",
    "prettier": "cd ./client && yarn run prettier && cd ../server && yarn run prettier",
    "lint": "cd ./client && yarn run lint && cd ../server && yarn run lint",
    "precommit": "yarn run prettier",
    "prepush": "yarn run build",
    "install:all": "yarn && cd ./client && yarn && cd ../server && yarn",
    "upgrade:all": "yarn upgrade && cd ./client && yarn upgrade && cd ../server && yarn upgrade"
  },
  "dependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/node": "^10.5.6"
  },
  "devDependencies": {
    "concurrently": "^3.6.0",
    "husky": "^0.14.3",
    "nodemon": "^1.17.5"
  }
}
